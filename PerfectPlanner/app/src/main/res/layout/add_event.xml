<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Start Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_title"
        android:layout_alignLeft="@+id/event_title"
        android:layout_alignStart="@+id/event_title"
        android:id="@+id/event_startDateT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/event_endDateT"
        android:layout_alignLeft="@+id/event_endDateT"
        android:layout_alignStart="@+id/event_endDateT"
        android:id="@+id/event_endDate"
        android:layout_alignRight="@+id/event_startDate"
        android:layout_alignEnd="@+id/event_startDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|time"
        android:ems="10"
        android:id="@+id/event_startTime"
        android:layout_below="@+id/event_startTimeT"
        android:layout_alignLeft="@+id/event_startTimeT"
        android:layout_alignStart="@+id/event_startTimeT" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_endTimeT"
        android:layout_below="@+id/event_startTime"
        android:layout_alignLeft="@+id/event_startTime"
        android:layout_alignStart="@+id/event_startTime" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/event_endTimeT"
        android:layout_alignLeft="@+id/event_endTimeT"
        android:layout_alignStart="@+id/event_endTimeT"
        android:id="@+id/event_endTime"
        android:inputType="time" />

    <TextView
        android:text="Add Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/event_title"
        android:layout_below="@+id/event_titleT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_titleT"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Start Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/event_startTimeT"
        android:layout_below="@+id/event_title"
        android:layout_toRightOf="@+id/event_startDate"
        android:layout_toEndOf="@+id/event_startDate" />

    <TextView
        android:text="Tag Friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_tagFriendT"
        android:layout_below="@+id/event_endDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/event_tagFriend"
        android:layout_below="@+id/event_tagFriendT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_descriptionT"
        android:layout_below="@+id/event_tagFriend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="End Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_endDateT"
        android:layout_below="@+id/event_startDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/event_description"
        android:inputType="textMultiLine"
        android:layout_below="@+id/event_descriptionT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/event_startDate"
        android:layout_below="@+id/event_startDateT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignRight="@+id/event_endTimeT"
        android:layout_alignEnd="@+id/event_endTimeT" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/event_endDateT" />
</RelativeLayout>